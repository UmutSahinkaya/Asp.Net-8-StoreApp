@page "{id}"
@model RazorPagesExample.Pages.Employees.EditModel
@{
    ViewData["Title"] = "Edit";
}
<h1>Edit Page</h1>

<form method="post">
    <input type="hidden" asp-for="Employee.Id" />
    @*Name*@
    <div class="form-group row mb-3">
        <label asp-for="Employee.Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Employee.Name">
        </div>
    </div>
    @*Email*@
    <div class="form-group row mb-3">
        <label asp-for="Employee.Email" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Employee.Email">
        </div>
    </div>
    @*Photo*@
    <div class="form-group row mb-3">
        <label asp-for="Employee.Photo" class="col-sm-2 col-form-label">Photo</label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Employee.Photo">
        </div>
    </div>
    @*Department*@
    <div class="form-group row mb-3">
        <label asp-for="Employee.Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input class="form-control" asp-for="Employee.Department">
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Update</button>
            <a href="/Employees/Index" type="submit" class="btn btn-danger">Cancel</a>
        </div>
    </div>
</form>
